<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>copy-localservices-app</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>Apps</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>_JARs</outputDirectory>
			<includes>
				<include>com.kony.dbp:*:jar:${project.version}</include>
				<include>com.temenos.infinity:infinity-api-commons:jar:</include>
	            <include>com.temenos.infinity:*:jar:${project.version}</include>
				<include>com.kony.dbp:DBPFramework:jar:</include>
				<include>com.infinity.dbx:DBPJWTGeneration:jar:${project.version}</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.dist.dir}/binaries</directory>
			<outputDirectory>_JARs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.repo.dir}/Fabric/Apps/DbpLocalServices/Apps</directory>
			<outputDirectory>${file.separator}</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>